<!-- Note : Requires ANT 1.9.8+ -->
<project xmlns:if="ant:if" xmlns:unless="ant:unless">
  <target name="javadoc" description="generate java documentation">
    <javadoc sourcepath="src" sourcefiles="src/*.java" destdir="javadoc">
      <classpath>
        <fileset dir="${home}/jars" includes="*.jar"/>
      </classpath>
    </javadoc>
  </target>

  <scriptdef language="javascript" name="upper">
    <attribute name="string" />
    <attribute name="to" />
    project.setProperty( attributes.get( "to" ), attributes.get( "string" ).toUpperCase() );
  </scriptdef>

  <scriptdef language="javascript" name="lower">
    <attribute name="string" />
    <attribute name="to" />
    project.setProperty( attributes.get( "to" ), attributes.get( "string" ).toLowerCase() );
  </scriptdef>

  <target name="depnatives">
    <copy todir=".">
      <fileset dir="${home}/native" includes="*.dll"/>
      <fileset dir="${home}/native" includes="*.so"/>
      <fileset dir="${home}/native" includes="*.dylib"/>
    </copy>
  </target>

  <macrodef name="download">
    <attribute name="url"/>
    <attribute name="dest"/>
    <sequential>
      <get src="@{url}" dest="@{dest}" usetimestamp="true"/>
    </sequential>
  </macrodef>

  <!-- Windows targets -->

  <!--these should be set before importing this file to override default behavior-->
  <property name="ico" value="${app}.ico"/>
  <property name="msi" value="${app}"/>
  <property name="bits" value="64"/>
  <property name="cfg" value="${app}.cfg"/>
  <property name="candle_extra" value=""/>
  <property name="light_extra" value=""/>
  <property name="apptype" value=""/>
  <property name="heat_home" value="jre"/>
  <property name="ffmpeg_home" value=""/>

  <property file="${cfg}"/>
  <lower string="${MAINCLASS}" to="mainclass" />

  <target name="exe" depends="jar,depjars,depnatives"  description="create msi installer file 64bit">
    <sequential>
      <copy file="${home}/stubs/win${bits}${apptype}.exe" tofile="${app}.exe" overwrite="true"/>
      <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.WinPE" fork="true">
        <arg value="${app}.exe"/>
        <arg value="${ico}"/>
        <arg value="${cfg}"/>
      </java>
    </sequential>
  </target>

  <target name="graal" depends="jar,depjars,depnatives,exe"  description="generate aot library">
    <sequential>
      <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.GenGraal" fork="true">
        <arg value="${MAINCLASS}"/>
      </java>
      <exec executable="native-image.cmd">
        <arg value="-cp"/>
        <arg value="${CLASSPATH}"/>
        <arg value="${MAINCLASS}"/>
        <arg value="-H:JNIConfigurationFiles=graal.json"/>
        <arg value="--shared"/>
      </exec>
      <delete file="graal.json"/>
    </sequential>
  </target>

  <target name="msi" depends="exe,jar,depjars"  description="create msi installer file 64bit">
    <sequential>
      <exec command="candle -ext WixFirewallExtension -ext WixUtilExtension ${candle_extra} -o wix.obj wix64.xml"/>
      <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.WixHeat" fork="true">
        <arg value="${jre}"/>
        <arg value="jre.xml"/>
        <arg value="${heat_home}"/>
        <arg value="JRE"/>
      </java>
      <exec command="candle -o jre.obj jre.xml"/>
      <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.WixHeat" fork="true">
        <arg value="${home}/ffmpeg"/>
        <arg value="ffmpeg.xml"/>
        <arg value="."/>
        <arg value="FFMPEG"/>
      </java>
      <exec command="candle -o ffmpeg.obj ffmpeg.xml"/>
      <exec command="light ${light_extra} -ext WixUIExtension -ext WixFirewallExtension -ext WixUtilExtension -cultures:en-us -b ${home} -b ${jre} -b ${home}/ffmpeg -dWixUILicenseRtf=${home}/license.rtf -o ${msi}-${version}-win${bits}.msi wix.obj jre.obj ffmpeg.obj"/>
      <delete file="wix.obj"/>
      <delete file="jre.obj"/>
      <delete file="jre.xml"/>
      <delete file="ffmpeg.obj"/>
      <delete file="ffmpeg.xml"/>
      <delete file="rt.jar"/>
      <delete file="${msi}-${version}-win${bits}.wixpdb"/>
      <move unless:set="nomove" file="${msi}-${version}-win${bits}.msi" todir="${home}/release"/>
    </sequential>
  </target>

  <!-- Linux targets -->

  <target name="elf" depends="jar,depjars,depnatives" unless="noelf" description="create elf binaries">
    <sequential>
      <copy file="${home}/stubs/linux${bits}.bin" tofile="/usr/${bin}/${app}"/>
      <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.ResourceManager">
        <arg value="/usr/${bin}/${app}"/>
        <arg value="${cfg}"/>
      </java>
      <chmod file="/usr/${bin}/${app}" perm="+x"/>
    </sequential>
  </target>

  <target name="deb" depends="elf" description="create deb package">
    <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.GenDEB" fork="true">
      <arg value="${app}-${version}_${archext}.deb"/>
      <arg value="${arch}"/>
    </java>
    <copy file="${app}-${version}_${archext}.deb" todir="${home}/repo/debian" overwrite="true"/>
  </target>

  <target name="rpm" depends="elf" description="create rpm package">
    <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.GenRPM" fork="true">
      <arg value="${app}-${version}-1.${archext}.rpm"/>
      <arg value="${arch}"/>
    </java>
    <copy file="${app}-${version}-1.${archext}.rpm" todir="${home}/repo/fedora" overwrite="true"/>
  </target>

  <target name="pac" depends="elf" description="create pac package">
    <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.GenPAC" fork="true">
      <arg value="${app}-${version}-${archext}.pkg.tar.xz"/>
      <arg value="${arch}"/>
    </java>
    <copy file="${app}-${version}-${archext}.pkg.tar.xz" todir="${home}/repo/arch/${arch}" overwrite="true"/>
  </target>

  <!-- MacOSX targets -->

  <target name="mac">
    <sequential>
      <copy file="${home}/stubs/mac64.bin" tofile="${app}"/>
      <chmod file="${app}" perm="+x"/>
    </sequential>
  </target>

  <target name="dmg" depends="jar,mac"  description="create dmg package">
    <java classpath="${home}/jars/javaforce.jar" classname="javaforce.utils.GenDMG" fork="true">
      <arg value="${app}"/>
      <arg value="${app}-${version}.dmg"/>
      <arg value="${jre}"/>
      <arg value="${ffmpeg_home}"/>
    </java>
    <delete file="${app}"/>
    <copy file="${app}-${version}.dmg" todir="${home}/release" overwrite="true"/>
  </target>
</project>
