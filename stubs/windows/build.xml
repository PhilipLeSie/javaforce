<project name="stubs" default="windows" basedir=".">
  <description>stubs</description>
  <property environment="env"/>

  <!-- Requires cygwin/mingw in PATH -->
  <target name="windows" description="create windows stubs">
    <exec command="x86_64-w64-mingw32-gcc -I '${env.JAVA_HOME}/include' -I '${env.JAVA_HOME}/include/win32' -static -static-libstdc++ windows.c -Wl,-subsystem,windows -lstdc++ -o ../win64.exe"/>

    <exec command="x86_64-w64-mingw32-gcc -I '${env.JAVA_HOME}/include' -I '${env.JAVA_HOME}/include/win32' -static -static-libstdc++ windows.c -Wl,-subsystem,console -lstdc++ -o ../win64c.exe"/>

    <exec command="x86_64-w64-mingw32-gcc -I '${env.JAVA_HOME}/include' -I '${env.JAVA_HOME}/include/win32' -static -static-libstdc++ -D_JF_SERVICE windows.c -Wl,-subsystem,console -lstdc++ -o ../win64s.exe"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="." includes="**/*.exe"/>
      <fileset dir="." includes="**/*.jar"/>
    </delete>
  </target>
</project>
