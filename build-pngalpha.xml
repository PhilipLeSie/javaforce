<project name="pngalpha" default="zip" basedir=".">
  <description>pngalpha</description>
  <!-- set global properties for this build -->
  <property name="app" value="pngalpha"/>
  <property name="apptype" value="c"/>
  <property name="cfg" value="cfg/pngalpha.cfg"/>
  <property name="ico" value="javaforce.ico"/>
  <property name="home" value="."/>

  <property environment="env"/>

  <import file="base.xml"/>

  <target name="depjars" depends="depnatives">
  </target>

  <target name="compile" depends="depjars" description="compile the source">
  </target>

  <target name="jar" depends="depjars,compile" description="build jar file">
  </target>

  <target name="zip" depends="graal">
    <zip destfile="${app}.zip">
      <fileset dir=".">
        <include name="${app}.exe"/>
        <include name="jfnative64.dll"/>
        <include name="${mainclass}.dll"/>
      </fileset>
    </zip>
  </target>
</project>
